<h2>スケジュール詳細</h2>
 
 <table>
   <tr>
     <th>タイトル</th>
     <td><%= @task.title %></td>
   </tr>
   <tr>
     <th>開始日</th>
     <td><%= @task.start_at.to_s(:date_jp) %></td>
   </tr>
   <tr>
     <th>投稿日時</th>
     <td><%= @task.updated_at.to_s(:date_jp) %></td>
   </tr>
   <tr>
     <th>終日</th>
     <td>
      <% if @task.all_day %>
        <strong>○</strong>
      <% end %>
     </td>
   </tr>
   <tr>
     <th>スケジュールメモ</th>
     <td><%= @task.memo %></td>
 </tr>
 </table>
 
 <div>
   <ul>
     <li><%= link_to "スケジュール一覧に戻る", root_path %></li>
     <li><%= link_to "スケジュールを編集する", [:edit, @task] %></li>
     <li><%= link_to "スケジュールを削除", task_path(@task),
     data: { turbo_method: 'delete', turbo_confirm: "本当に削除しますか？"}%></li>
   </ul>
 </div>